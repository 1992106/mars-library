{
  "name": "mars-library",
  "version": "0.0.1",
  "main": "dist/mars-library.cjs.js",
  "browser": "dist/mars-library.iife.js",
  "module": "dist/mars-library.es.js",
  "unpkg": "dist/mars-library.umd.js",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode lib",
    "serve": "vite preview",
    "lint": "npm run lint:es & npm run lint:style",
    "lint:es": "eslint src --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "lint:style": "stylelint src/**/*.{css,scss,sass,vue} --fix"
  },
  "dependencies": {
    "ant-design-vue": "^2.1.6",
    "core-js": "^3.12.1",
    "dayjs": "^1.10.4",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "vue": "3.0.10",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vitejs/plugin-vue-jsx": "^1.1.4",
    "@vue/cli-plugin-babel": "^4.5.12",
    "@vue/compiler-sfc": "^3.0.11",
    "babel-eslint": "^10.1.0",
    "commitlint": "^12.1.4",
    "dart-sass": "^1.25.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^6.0.0",
    "less": "^4.1.1",
    "less-loader": "^8.1.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "sass": "^1.32.13",
    "sass-loader": "^11.1.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.2.4",
    "vite": "2.3.1",
    "vite-plugin-style-import": "^0.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:1992106/mars-library.git"
  },
  "homepage": "https://github.com/1992106/mars-library",
  "keywords": [
    "vue3",
    "mars library"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/1992106/mars-library/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix",
      "git add"
    ]
  }
}
